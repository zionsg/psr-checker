<?xml version="1.0"?>
<ruleset name="PSR">
    <description>PSR coding standards</description>

    <rule ref="PSR1">
        <include-pattern>*.php</include-pattern>
        <include-pattern>*.phtml</include-pattern>
    </rule>

    <rule ref="PSR2">
        <include-pattern>*.php</include-pattern>
        <include-pattern>*.phtml</include-pattern>
    </rule>

    <!-- Dirs to exclude -->
    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Files to exclude -->
    <exclude-pattern>*.css</exclude-pattern>
    <exclude-pattern>*.eot</exclude-pattern>
    <exclude-pattern>*.jpg</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.json</exclude-pattern>
    <exclude-pattern>*.lock</exclude-pattern>
    <exclude-pattern>*.md</exclude-pattern>
    <exclude-pattern>*.png</exclude-pattern>
    <exclude-pattern>*.svg</exclude-pattern>
    <exclude-pattern>*.txt</exclude-pattern>
    <exclude-pattern>*.woff</exclude-pattern>
    <exclude-pattern>*.woff2</exclude-pattern>
    <exclude-pattern>*.xml</exclude-pattern>
</ruleset>
